<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FF4500"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.rayokaah.a36statesandcapitals.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginBottom="8dp"
            android:textColor="#8BC34A"
            android:text="Welcome !" />

        <ImageView
            android:src="@drawable/icon"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#8BC34A"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:paddingBottom="40dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-smallcapsf"
        android:text="Prove your knowledge of Nigeria's 36 states and capitals." />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8BC34A"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/display_image"
        android:src="@drawable/nigerianflag"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText"
        android:textSize="16sp"
        android:hint="Type your first name here and click below to begin"
        android:layout_width="match_parent"
        android:textColorHint="#EEEEEE"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        >

        <CheckBox
            android:visibility="gone"
            android:id="@+id/checkbox1"
            android:textSize="30sp"
            android:text="A"
            android:textColor="#EEEEEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:visibility="gone"
            android:id="@+id/checkbox2"
            android:textSize="30sp"
            android:text="B"
            android:textColor="#EEEEEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:visibility="gone"
            android:id="@+id/checkbox3"
            android:textSize="30sp"
            android:text="C"
            android:textColor="#EEEEEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/option1_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="A"
                android:textColor="#EEEEEE"
                android:textAppearance="?android:textAppearanceLarge" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/option2_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="B"
                android:textColor="#EEEEEE"
                android:textAppearance="?android:textAppearanceLarge" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/option3_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="C"
                android:textColor="#EEEEEE"
                android:textAppearance="?android:textAppearanceLarge" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/option4_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="D"
                android:textColor="#EEEEEE"
                android:textAppearance="?android:textAppearanceLarge" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="8dp"/>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:onClick="startQues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_button"
        android:textColor="#FAFAFA"
        android:layout_gravity="center_horizontal"
        android:text=" START QUIZ"
        />

</LinearLayout>
</ScrollView>
